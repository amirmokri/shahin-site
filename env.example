# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=shahinautoservice.ir,www.shahinautoservice.ir

# Database
DB_NAME=shahin_db
DB_USER=root
DB_PASSWORD=your-db-password
DB_HOST=db
DB_PORT=3306

# Storage Settings
STORAGE_TYPE=minio
# Options: 'minio', 'aws', 'local'

# MinIO Settings
MINIO_ENDPOINT_URL=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=shahin-media
MINIO_STATIC_BUCKET_NAME=shahin-static
MINIO_REGION_NAME=us-east-1
MINIO_USE_SSL=False
MINIO_CUSTOM_DOMAIN=
MINIO_QUERYSTRING_AUTH=False
MINIO_SIGNATURE_VERSION=s3v4

# AWS S3 Settings (alternative)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# File Upload Settings
MAX_UPLOAD_SIZE=52428800
USE_FALLBACK_STORAGE=True

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_SITE_VERIFICATION=your-google-verification-code
BING_SITE_VERIFICATION=your-bing-verification-code
FACEBOOK_PIXEL_ID=your-facebook-pixel-id
