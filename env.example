# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=shahinautoservice.ir,www.shahinautoservice.ir

# Database
DB_NAME=shahin_db
DB_USER=root
DB_PASSWORD=your-db-password
DB_HOST=db
DB_PORT=3306

# Storage Settings (Hamravesh/Arvan S3-compatible)
USE_S3=True
ARVAN_ACCESS_KEY_ID=your-object-storage-access-key
ARVAN_SECRET_ACCESS_KEY=your-object-storage-secret-key
ARVAN_BUCKET_NAME=your-bucket-name
ARVAN_REGION=ir-thr-at1
# Endpoint example: https://s3.ir-thr-at1.arvanstorage.com (or Hamravesh-provided)
ARVAN_ENDPOINT_URL=https://s3.ir-thr-at1.arvanstorage.com
# Addressing can be 'virtual', 'path', or 'auto'
ARVAN_ADDRESSING_STYLE=virtual
# Optional custom domain (CDN / CNAME) to serve files
ARVAN_CUSTOM_DOMAIN=media.example.com
# Signature version
ARVAN_SIGNATURE_VERSION=s3v4

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_SITE_VERIFICATION=your-google-verification-code
BING_SITE_VERIFICATION=your-bing-verification-code
FACEBOOK_PIXEL_ID=your-facebook-pixel-id
